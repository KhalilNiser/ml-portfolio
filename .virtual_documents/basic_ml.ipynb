import numpy as np
import pandas as pd
from sklearn.linear_model import LinearRegression
import matplotlib.pyplot as plt


# fake learning dataset
x = np.array([[1], [2], [3], [4], [5]])
# Slightly noisy
y = np.array([2, 4, 5, 4, 5])


model = LinearRegression()
model.fit(x, y)


pred = model.predict(x)


print("Model Coefficient:", model.coef_)
print("Model Intercept:", model.intercept_)


plt.scatter(x, y)
plt.plot(x, pred)
plt.xlabel("Study Hours")
plt.ylabel("Score")
plt.title("Simple Linear Regression")
plt.show()


import torch
import torch.nn as nn
import matplotlib.pyplot as plt


# Create data training
x = torch.linspace(0, 10, 100).unsqueeze(1)
# Noisy line (slope = 2, intercept = 1)
y = x * 2 + 1 + torch.randn(x.size()) * 0.5


# Neural Network Model
model = nn.Sequential(
    nn.Linear(1, 16),
    nn.ReLU(),
    nn.Linear(16, 1)
)



# Loss + optimizer
loss_fn = nn.MSELoss()
optimizer = torch.optim.Adam(model.parameters(), lr=0.01)

losses = []


# Training loop
for epoch in range(300):
    pred = model(x)
    loss = loss_fn(pred, y)


    optimizer.zero_grad()
    loss.backward()
    optimizer.step()


    losses.append(loss.item())


    # Plot results
    plt.figure()
    plt.scatter(x.detach(), y.detach())
    plt.plot(x.detach(), model(x).detach())
    plt.title("Neural Network Learned Line")
    plt.show()


    # Print last loss
    print("Final Loss:", losses[-1])



